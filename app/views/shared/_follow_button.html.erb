<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "unfollow-btn"%>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "follow-btn" %>
  <% end %>
<% end %>