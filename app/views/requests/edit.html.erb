<%= render "shared/header" %>
<%= form_with model: @request, class: 'foom-main', local: true do |f| %>
  <div class="form-wrap">
    <h2 class="form-header">＜リクエスト編集＞</h2>
    <%= render "shared/error_messages", model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">タイトル</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :title, class: "input-default", placeholder: 'タイトルを入力してください(40文字まで)' %>

      <div class='form-text-wrap'>
        <label class="form-text">内容</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :content, class: "input-text", placeholder: '内容を入力してください' %>

      <div class="form-image-wrap">
        <label class="form-image">画像</label>
        <span class="form-any">任意</span>
      </div>
      <%= f.file_field :image, class: 'input-image' %>

      <div class='foom-btn'>
        <%= f.submit '送信', class: 'foom-red-btn' %>
        <%=link_to 'もどる', request_path, class:"back-btn" %>
      </div>
    </div>
  </div>
<% end %>
<%= render "shared/footer" %>