<%= render "shared/header" %>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <h2 class="form-header">＜ログイン＞</h2>
    <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :nickname, class:"input-default", autofocus: true, placeholder:"ニックネームを入力" %>

      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワードを入力" %>

      <div class='register-btn'>
        <%= f.submit "ログイン", class:"register-red-btn" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "shared/footer" %>